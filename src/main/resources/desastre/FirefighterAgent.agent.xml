<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi http://jadex.sourceforge.net/jadex-bdi-v3.xsd"
       name="FirefighterBDI"
       agenttype="bdiv3">

    <implementation class="desastre.FirefighterAgent"/>

    <plans>
        <plan trigger="goal">
            <goal class="FirefighterAgent$Extinguish"/>
            <body class="desastre.ExtinguishFirePlan"/>
        </plan>
        <plan trigger="goal">
            <goal class="desastre.GoGoal"/>
            <body class="desastre.GoPlanEnv"/>
        </plan>
    </plans>

</agent>